<div class="title-search-box d-flex align-items-center justify-content-between pb-4"
  style="width: 270px; height: 60px;">
  <div class="fs-2 fw-bold">Cập nhật hồ sơ</div>
</div>

<form class="infor" method="post" action="/user/update-profile">
  <input type="text" class="form-control" name="id" style="display: none;" value="{{id}}" />
  {{#if penName}}
  <div class="mb-3 mt-4">
    <label for="penName" class="form-label fw-bold">Bút danh</label>
    <input type="text" class="form-control" name="penName" id="penName" value="{{penName}}" />
  </div>
  {{/if}}
  <div class="mb-3 mt-4">
    <label for="email" class="form-label fw-bold">Email</label>
    <input type="text" class="form-control" name="email" id="email" value="{{email}}" />
  </div>
  <div class="mb-3 mt-4">
    <label for="name" class="form-label fw-bold">Họ và tên</label>
    <input type="text" class="form-control" id="name" name="name" value="{{name}}" />
  </div>
  <div class="mb-3 mt-4">
    <label for="dob" class="form-label fw-bold">Ngày tháng năm sinh</label>
    <input type="date" class="form-control" id="dob" name="dob" value="{{dateOfBirth}}" />
  </div>
  <div class="button mt-4 d-flex justify-content-end">
    <button type="submit" class="btn btn-primary p-0 rounded fw-bold cancel">Hủy</button>
    <button type="submit" class="btn btn-primary p-0 rounded fw-bold submit ms-sm-2 ms-md-4">Cập nhật</button>
  </div>
</form>

<div class="title-search-box d-flex align-items-center justify-content-between pb-4"
  style="width: 270px; height: 60px;">
  <div class="fs-2 fw-bold">Mật khẩu</div>
</div>

<form class="pass" method="post" action="/user/reset-password">
  <div class="mb-3 mt-4">
    <label for="oldPassword" class="form-label fw-bold">Mật khẩu cũ</label>
    <input type="password" class="form-control" id="oldPassword" name="oldPassword" />
  </div>
  <div class="mb-3 mt-4">
    <label for="newPassword" class="form-label fw-bold">Mật khẩu mới</label>
    <input type="password" class="form-control" id="newPassword" name="newPassword" />
  </div>
  <div class="mb-3 mt-4">
    <label for="newPassword_re" class="form-label fw-bold">Nhập lại mật khẩu mới</label>
    <input type="password" class="form-control" id="newPassword_re" />
  </div>
  <div class="button mt-4">
    <button type="submit" class="btn btn-primary changePass p-0 rounded fw-bold me-3">Đổi mật khẩu</button>
    <button type="submit" class="btn btn-primary forgetPass p-0 rounded fw-bold">Quên mật khẩu</button>
  </div>
</form>