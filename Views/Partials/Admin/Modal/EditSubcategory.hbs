<div class="modal fade" id="modal_{{id}}_" tabindex="-1" aria-labelledby="modalLabel_{{id}}_" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header custom-modal-header">
                <h1 class="modal-title fs-5" style="width:100%; text-align: center;" id="modalLabel_{{id}}_">Chỉnh sửa
                    chuyên mục cấp 2</h1>
            </div>
            <form method="post">
                <input name="id" type="text" value="{{id}}" style="display: none;">
                <div class="modal-body">
                    <select name="category" class="form-select" style="height: 40px;" id="roleSelect">
                        {{#each allCategories}}
                        <option value="{{id}}" {{#if (eq ../parentId id ) }}selected{{/if }}>
                            {{name}}</option>
                        {{/each}}
                    </select>
                    <textarea class="form-control" rows="4" name="name"
                        placeholder="Mời nhập tên mới">{{name}}</textarea>
                </div>
                <div class="modal-footer custom-modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="sumbit" class="btn actionBtn" formaction="/admin/subcategory/edit">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>