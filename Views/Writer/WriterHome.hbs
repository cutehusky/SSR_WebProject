<div style="margin-top: 50px;" class="addNews">
  <h4 style="padding-top: 5px;">Thêm Bài Viết</h4>
  <a style="margin-left: 50px;" name="" id="" class="btn btn1" href="/writer/new" role="button">
    <class="bi bi-file-earmark-plus-fill" style="margin-right: 5px;"></i>
      Thêm bài viết
  </a>
</div>

<div class="statistics mt-4 mb-4 d-flex flex-wrap align-items-center justify-content-around">
  {{#each statistics}}
  <a style="text-decoration: none;" href="/writer/myArticles?state={{id}}"
    class="flex-fill stat-item rounded-bottom fw-bold fs-4 shadow p-3 d-flex flex-column align-items-center justify-content-center"
    id="{{id}}">
    <span class="stat-label pb-1 m-0 d-flex text-center">{{label}}</span>
    <span class="stat-value pt-4">{{value}}</span>
    <span class="stat-tag fs-5 fw-normal pt-2">{{tag}}</span>
  </a>
  {{/each}}
</div>

<script>
  console.log("data: ", this.statistics)
</script>
{{#section 'script'}}
<script>
    $('.stat-value').each(function () {
        $(this).prop('Counter',0).animate({
            Counter: $(this).text()
        }, {
          
          //chnage count up speed here
            duration: 1500,
            easing: 'swing',
            step: function (now) {
                $(this).text(Math.ceil(now));
            }
        });
    });
</script>
{{/section}}