<div class="container d-flex align-items-center justify-content-between mt-4 editor-option">
  <div class="d-flex align-items-center">
    <i class="bi bi-reply-fill me-2"></i>
    <p class="mb-0">Duyệt bài viết</p>
  </div>
  <div class="d-flex">
    <button type="button" class="btn btn-danger me-2 editor-decline flex-grow-1" data-bs-toggle="modal" data-bs-target="#editor-decline-modal">Từ chối</button>
    <button type="button" class="btn btn-primary editor-accept flex-grow-1" data-bs-toggle="modal" data-bs-target="#editor-adjust-modal">Phê duyệt</button>
  </div>
</div>
<div class="container editor-article">
  <div class="mt-1 mb-2">
    <span class="text-muted">{{article.date}}</span>
  </div>
  <p class="mb-2">
    <span class="fw-bold">Tác giả:</span>
    <span>{{article.author}}</span>
  </p>
  <p class="mb-2">
    <span class="fw-bold">Tiêu đề:</span> 
    <span>{{article.title}}</span>
  </p>
  <p class="mb-2">
    <span class="fw-bold">Category:</span>
    <span class="text-primary">{{article.subcategory}}</span>
  </p>
  <div class="mb-2 d-flex align-items-center">
    <span class="fw-bold me-2">Tag:</span>
    <div class="d-flex flex-wrap">
      {{#each article.tags}}
        <span class="badge border border-primary text-primary me-2">{{this}}</span>
      {{/each}}
    </div>
  </div>
</div>
<div class="container editor-content-view mt-3">
  <div class="text-center mb-3">
    <img src={{article.cover}} alt="Logo" class="img-fluid" style="max-width: 750px;">
  </div>
  <hr>
  <div class="text-content">
    <div class="paragraph my-3">
      {{{article.content}}}
    </div>
  </div>
</div>

<div class="modal fade" id="editor-decline-modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-center w-100"><span>Lý do từ chối bài viết</span></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-1">
        <p class="mb-2 fw-bold">Phản hồi:</p>
        <textarea class="form-control" rows="10" placeholder="Bài viết bị từ chối vì..."></textarea>
      </div>
      <div class="modal-footer">
          <div class="d-flex">
            <button type="button" class="btn editor-modal-return flex-grow-1 me-2" data-bs-dismiss="modal">Quay về</button>
            <button type="button" class="btn editor-modal-send flex-grow-1">Gửi</button>
          </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editor-adjust-modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-center w-100"><span>Hiệu chỉnh bài viết</span></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-1">
        <div class="mb-2">
          <label for="editor-category" class="form-label fw-bold">Chuyên mục</label>
          <input type="text" class="form-control" id="editor-category" placeholder= "{{article.category}}/{{article.subcategory}}">
        </div>
        <div class="mb-2">
          <label for="editor-tags" class="form-label fw-bold">Tags</label>
          <div class="d-flex flex-wrap align-items-center" id="tag-container">
            {{#each article.tags}}
              <div class="badge border border-primary text-primary me-2 d-flex justify-content-between align-items-center">
                {{this}}
                <button type="button" class="btn btn-sm btn-link text-danger p-0"><i class="bi bi-x-circle ms-1"></i></button>
              </div>
            {{/each}}
          </div>
          <div class="d-flex mt-2">
            <input type="text" class="form-control form-control-sm me-2" id="editor-tags" placeholder="Add tag">
            <button type="button" class="btn btn-sm editor-add-tag">
              <i class="bi bi-plus"></i>
            </button>
          </div>
        </div>
        <div class="mb-2">
          <label for="editor-time" class="form-label fw-bold">Time</label>
          <div class="d-flex">
            <input type="date" class="form-control me-2" id="editor-date" value="2025-01-27">
            <input type="time" class="form-control" id="editor-time" value="20:00">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="d-flex">
          <button type="button" class="btn editor-modal-return flex-grow-1 me-2" data-bs-dismiss="modal">Quay về</button>
          <button type="button" class="btn editor-modal-send flex-grow-1">Đăng</button>
        </div>
      </div>
    </div>
  </div>
</div>
