<div class="row d-flex justify-content-center">
    <div class="wrapper col col-lg-12 col-md-12 col-sm-12 mt-4">
        <div class="button-view-state">
            <a href="/editor/articles" class="btn actionBtn scale me-3">Bài viết cần duyệt</a>
            <a href="/editor/articles/approved" class="btn actionBtn scale me-3">Bài viết đã duyệt</a>
            <a href="/editor/articles/rejected" class="btn actionBtn scale me-3">Bài viết bị từ chối</a>
        </div>
        <h1 class="editor-title">Bài viết đã duyệt</h1>
        <div class="editor-container mt-4">
            <form method="get" action="/editor/articles/approved" class="mb-4">
                <div class="categorySelection">
                    <label
                        for="roleSelect"
                        class="form-label"
                        style="padding-top: 8px; width: 200px"
                    >
                        Chuyên Mục
                    </label>
                    <select
                        name="category"
                        class="form-select"
                        style="height: 40px"
                        id="roleSelect"
                    >
                        <option value="-1" {{#if (eq selectedCategory -1)}}selected{{/if}}>Tất Cả</option>
                        {{#each categories}}
                            <option value="{{this.id}}" {{#if (eq ../selectedCategory this.id)}}selected{{/if}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                    <button
                        type="submit"
                        class="btn actionBtn scale"
                        style="margin-left: 30px; width: 120px"
                    >
                        <i
                            class="bi bi-funnel-fill"
                            style="margin-right: 10px"
                        ></i
                        >Lọc
                    </button>
                </div>
            </form>
