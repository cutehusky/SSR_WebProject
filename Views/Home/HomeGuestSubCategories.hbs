<section class="section top-header mt-5">
    <nav class="d-flex">
        <div>
            <h2 class="me-2">{{nameCategory}}</h2>
        </div>
        <ul class="nav" >
            {{#each categories}}
                {{#eq this.id ../subCategoryId}}
                    <li class="pt-3 me-3"><a href="{{this.link}}" style="border-bottom: 1px solid var(--color-red-primary);">{{this.name}}</a></li>
                {{else}}
                    <li class="pt-3 me-3"><a href="{{this.link}}">{{this.name}}</a></li>
                   
                {{/eq}}
            {{/each}}
        </ul>
    </nav>
</section>


<section class="mt-5 d-flex">
    <section  class="w-65 me-3">
        <article class="top-news ">
            <div class="top-news__img position-relative">
                <img src="{{topNews.img}}" alt="" style="width: 100%;">
                <h4 class="text-light position-absolute ms-2" style="top: 90%">{{topNews.title}}</h4>
            </div>
            <h6 class="bg-dark d-flex align-items-center ps-2 mb-0 text-light" style="height: 4rem;">{{topNews.description}}</h6>

            <div class="d-flex flex-wrap bg-light pt-2 ">
                <p class="me-4 d-inline ms-2" >{{nameCategory}}</p>
                <div class="card-item-tags w-auto" >
                    {{#each topNews.tagList}}
                        <a href="{{this.link}}" class="me-0">
                            <button class="btn btn-sm tag">{{this.tag}}</button>
                        </a>
                    {{/each}}
                </div>
            </div>
        </article>


        <section class="mt-5">
            {{#each newsOfCategory}}
                <div class="card d-flex flex-row justify-content-center align-items-center" style="width: 100%; height: 150px;">
                    <img class="card-img-top" src="{{this.img}}" alt="Image" style="width: 200px; height: 120px;">
                    <div class="card-body d-flex flex-column justify-content-between align-items-start ms-3 border-end" style="width: 320px;">
                        <div class="card-item-title fw-bold text-dark">{{this.title}}</div>
                        <div class="card-item-description text-dark">{{this.description}}</div>
                        <div class="card-item-date text-muted">Ngày đăng: {{this.date}}</div>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between align-items-start ms-3" style="width: 200px;">
                        <div class="card-item-title fw-bold text-dark">{{this.tagTitle}}</div>
                        <div class="card-item-description text-dark">{{this.tagDescription}}</div>
                        <div class="card-item-tags">
                            {{#each this.tagList}}
                                <a href="{{this.link}}">
                                    <button class="btn btn-sm tag">{{this.tag}}</button>
                                </a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </section>
    </section>

    <section class="w-30">
        {{#each newsOfCategory}}
            <div class="card d-flex flex-row justify-content-center align-items-start" style="width: 100%; height: 150px;">
                <img class="card-img-top" src="{{this.img}}" alt="Image" style="width: 40%; height: 150px;">
                <div class="align-items-start ms-3 border-end" 
                    style="width: 60%; height: 100%; max-height: 150px;">
                    <p class="card-item-title fw-bold text-dark " style="width: 100%; max-height: 30px; text-overflow: ellipsis;">
                        {{this.title}}
                    </p>
                    <p class="card-item-description text-dark" style="width: 100%; max-height: 120px; text-overflow: ellipsis;">
                        {{this.description}}
                    </p>

                </div>
            </div>


            <div class="card-body d-flex justify-content-between align-items-start" style="width: 100%;">
                <div class="card-item-date text-muted" style="width:80px">Ngày đăng: {{this.date}}</div>
                <div>
                    <div class="card-item-title fw-bold text-dark">{{this.tagTitle}}</div>
                    <div class="card-item-description text-dark">{{this.tagDescription}}</div>
                </div>
                <div class="card-item-tags " style="width:100px">
                    {{#each this.tagList}}
                        <a href="{{this.link}}">
                            <button class="btn btn-sm tag" >{{this.tag}}</button>
                        </a>
                    {{/each}}
                </div>
            </div>  
        {{/each}}
    </section>
</section>


<nav aria-label="... " class="mt-5">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item active">
      <a class="page-link" href="#">2 </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>