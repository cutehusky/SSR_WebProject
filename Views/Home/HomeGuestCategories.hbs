
<section
  class="section top-header mt-5 mb-5 pb-4 border-bottom col col-lg-12 col-md-12 col-sm-12"
>
  <nav class="d-flex align-items-center">
    <div class="d-flex">
      <h2 class="main-category">{{name}}</h2>
    </div>
    <ul class="nav d-flex">
      {{#each categories}}
        <li class="sub-category"><a href="">{{this.name}}</a></li>
      {{/each}}
    </ul>
  </nav>
</section>

<div class="d-flex align-items-start">
  <div class="col col-lg-9 col-md-12 col-sm-12">
    <section class="d-flex col col-lg-12 col-md-12 col-sm-12">
      <section class="w-65 me-3 col col-lg-12 col-md-12 col-sm-12">
        <article class="top-news">
          <div class="top-news__img position-relative">
            <img src="{{topNews.img}}" alt="" style="width: 100%;" />
            <div class="top-news__date"><span>Ngày đăng: {{topNews.date}}</span></div>
            <div class="top-news__title">
              <h4 class="mb-0 p-3">{{topNews.title}}
              </h4>
            </div>
          </div>
          <div class="top-news__description p-3">
            <h6>
              {{topNews.description}}
            </h6>
          </div>

          <div class="d-flex align-items-center p-3 top-news__details">
            <div class="me-4">{{name}}</div>
            <div class="me-4">Subcategory</div>
            <ul class="d-flex align-items-center">
              {{#each topNews.tagList}}
                <li>
                  <a href="#">
                    <button class="btn tag">
                      {{this.tag}}
                    </button>
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
        </article>
      </section>
    </section>

    <section class="col col-lg-12 col-md-12 col-sm-12 main-news" style="margin-top: 100px;">
      {{> Component/News listOfNews=newsOfCategory}}
    </section>
  </div>
  <div class="col col-lg-3 sub-news">
    {{#each newsOfCategory}}
      <div class="mb-4">
        <div
          class="d-flex align-items-start sub-news-item__header"
          style="height: 110px;"
        >
          <img src="{{this.img}}" alt="{{this.title}}" style="width: 50%;" />
          <div class="d-flex flex-column justify-content-between ms-2 h-100">
            <span>{{this.title}}</span>
            <span>{{this.date}}</span>
          </div>
        </div>
        <div class="w-100 sub-news-item__footer">
          <div class="d-flex mb-1">
            <span>{{this.tagTitle}}</span>
            <span>{{this.tagDescription}}</span>
          </div>
          <div>
            {{#each this.tagList}}
              <a href="{{this.link}}">
                <button class="btn btn-sm tag">{{this.tag}}</button>
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

{{> Component/Paging}}