<div
    class="w-100 d-flex justify-content-center"
    style="background-color: rgba(255, 255, 255, 0.4)"
>
    <div class="w-75">
        <section class="mt-5">
            <div class="header-content mb-1 d-flex justify-content-between">
                <ul class="d-flex list-unstyled">
                    <li class="text-primary">
                        <a href="/category/{{data.categoryId}}">
                            {{data.category}}
                        </a>
                    </li>
                    <li style="margin: 0 12px">/</li>
                    <li>
                        <a href="/category/subcategory/{{data.subcategoryId}}">
                            {{data.subcategory}}
                        </a>
                    </li>
                </ul>

                <div>
                    <span class="data">{{data.DatePosted}}</span>
                    {{#if isPremiumUser}}
                    <a
                        href="/download/{{data.ID}}"
                        class="ms-2 icon-link icon-link-hover text-dark"
                        style="
                            --bs-icon-link-transform: translate3d(
                                0,
                                -0.125rem,
                                0
                            );
                        "
                    >
                        <i class="bi bi-file-earmark-arrow-down-fill"></i>
                    </a>
                    {{/if}}
                </div>
            </div>

            <h1 class="mb-3">{{data.Title}}</h1>

            <p class="mb-4">Được đăng bởi: {{data.writer}}</p>
            <div>
                <img src="{{data.BackgroundImage}}" style="width: 100%" />
            </div>
            {{{data.Content}}}
        </section>

        <hr class="mb-4" />

        <div class="d-flex mt-2 flex-wrap">
            <p class="fw-bold me-2">Tags:</p>
            <div class="card-item-tags" style="width: 90%">
                {{#each data.tags}}
                <a href="/tags?tag={{name_encode}}" class="me-1">
                    <button class="btn btn-sm tag">{{name}}</button>
                </a>
                {{/each}}
            </div>
        </div>

        <section class="mt-4">
            <h2
                class="pb-2 d-inline"
                style="
                    border-bottom: 1px solid var(--color-red-primary);
                    color: var(--color-gray-text);
                "
            >
                Bài viết liên quan
            </h2>
            <div
                class="mt-5 d-flex flex-column justify-content-center align-items-center"
            >
                {{> Component/News listOfNews=data.relativeNews}}
            </div>
        </section>

        <hr class="mt-5" />

        <section class="mt-5">
            <h2
                class="pb-2 d-inline"
                style="border-bottom: 1px solid var(--color-red-primary)"
            >
                Bình luận
            </h2>
            <div class="mt-5">
                <form
                    enctype="application/x-www-form-urlencoded"
                    id="commentForm"
                    class="input-group mb-5 w-100"
                    method="post"
                >
                    <div class="me-2">
                        <img
                            src="https://th.bing.com/th/id/R.ca7911324b10651bbbf6733698ddde53?rik=1VZk4kppp9Iw%2fw&pid=ImgRaw&r=0"
                            alt="Avatar"
                            style="
                                width: 40px;
                                height: 40px;
                                border-radius: 50%;
                            "
                        />
                    </div>
                    <input
                        type="text"
                        class="d-none"
                        value="{{data.ID}}"
                        name="id"
                    />
                    <input
                        type="text"
                        class="form-control"
                        placeholder="Viết bình luận"
                        name="content"
                    />
                    <button
                        type="submit"
                        class="btn btn1"
                        formaction="/comment"
                    >
                        Gửi
                    </button>
                </form>

                <div class="row" id="commentList">
                    {{#each data.comments}}
                    <div class="d-flex mt-3">
                        <div class="me-2">
                            {{#if (notnull Avatar)}}
                            <img
                                src="{{this.Avatar}}"
                                alt="Avatar"
                                style="
                                    width: 40px;
                                    height: 40px;
                                    border-radius: 50%;
                                "
                            />
                            {{else}}
                            <img
                                src="/98650216.jpg"
                                alt="Avatar"
                                style="
                                    width: 40px;
                                    height: 40px;
                                    border-radius: 50%;
                                "
                            />
                            {{/if}}
                        </div>
                        <div class="d-flex flex-column">
                            <div class="d-flex">
                                {{#if (notnull Name)}}
                                <div class="fw-bold me-2">{{this.Name}}</div>
                                {{else}}
                                <div class="fw-bold me-2">Anonymous</div>
                                {{/if}}
                                <div class="text-muted">
                                    {{this.DatePosted}}
                                </div>
                            </div>
                            <div>{{this.Content}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>
    </div>
</div>
