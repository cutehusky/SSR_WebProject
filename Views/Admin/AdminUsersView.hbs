    <a name="" id="" href="#" role="button" class="btn btn-1 scale d-flex align-items-center gap-2">
        <i class="bi bi-list"></i>
        Quản Lý Chuyên Mục
    </a>

    <a name="" id="" href="#" role="button" class="btn btn-2 scale d-flex align-items-center gap-2">
        <i class="bi bi-tag"></i>
        Quản Lý Nhãn
    </a>

    <a name="" id="" href="#" role="button" class="btn btn-3 scale d-flex align-items-center gap-2">
        <i class="bi bi-file-earmark-text"></i>
        Quản Lý Bài Viết
    </a>

    <a name="" id="" href="#" role="button" class="btn btn-4 d-flex align-items-center gap-2">
        <i class="bi bi-person"></i>
        <i>
            Quản Lý Người Dùng
        </i>
    </a>
