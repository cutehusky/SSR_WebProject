<div class="container mt-5">
    <h1 class="custom-title">Quản Lý Người Dùng</h1>
</div>
<div class="categorySelection" style="justify-content: flex-start;">
    <h4 style="padding-top: 5px;">Thêm Người Dùng</h4>
    <button type="button" class="btn actionBtn scale" style="margin-left: 30px;width: 120px;" data-bs-toggle="modal"
        data-bs-target="#modal">
        <i class="bi bi-person-fill-add" style="margin-right: 5px;"></i> Thêm
    </button>
</div>

<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel_" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header custom-modal-header">
                <h1 class="modal-title fs-5" style="width:100%; text-align: center;" id="modalLabel_">Thêm người dùng
                </h1>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <input type="text" class="form-control" name="email" id="emailInput" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="nameInput">Họ tên</label>
                        <input type="text" class="form-control" name="name" id="nameInput" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="dobInput">Ngày sinh</label>
                        <input type="text" class="form-control" name="dob" id="dobInput" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="roleSelect1" class="form-label" style="padding-top: 8px; width: 200px;">
                            Vai Trò
                        </label>
                        <select name="role" class="form-select" style="height: 40px;" id="roleSelect1">
                            <option>Admin</option>
                            <option>User</option>
                            <option>Writer</option>
                            <option>Editor</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer custom-modal-footer ">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="sumbit" class="btn actionBtn" formaction="/admin/user/add">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<h4>Danh Sách Người Dùng</h4>
<form method="get" action="/admin/user">
    <div class="categorySelection">
        <label for="roleSelect2" class="form-label" style="padding-top: 8px; width: 200px;">
            Vai Trò
        </label>
        <select name="role" class="form-select" style="height: 40px;" id="roleSelect2">
            <option value="all" {{#if (eq selectedRole 'all' ) }}selected{{/if}}>
                Tất Cả
            </option>
            <option value="admin" {{#if (eq selectedRole 'admin' ) }}selected{{/if}}>
                Admin
            </option>
            <option value="user" {{#if (eq selectedRole 'user' ) }}selected{{/if}}>
                User
            </option>
            <option value="writer" {{#if (eq selectedRole 'writer' ) }}selected{{/if}}>
                Writer
            </option>
            <option value="editor" {{#if (eq selectedRole 'editor' ) }}selected{{/if}}>
                Editor
            </option>
        </select>
        <button type="submit" class="btn actionBtn scale" style="margin-left: 30px;width: 120px;">
            <i class="bi bi-funnel-fill" style="margin-right: 10px;"></i>Lọc</button>
    </div>
</form>
<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Email</th>
            <th>Họ Tên</th>
            <th>Vai Trò</th>
            <th>Ngày Sinh</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{email}}</td>
            <td>{{name}}</td>
            <td>{{role}}</td>
            <td>{{dateOfBirth}}</td>
            <td>
                <button type="button" class="btn actionBtn editBtn scale" data-bs-toggle="modal"
                    data-bs-target="#modal_{{id}}">
                    <i class="bi bi-pencil-square"></i>
                </button>
                <form method="post" style="margin: 0px; display: inline">
                    <input name="id" type="text" value="{{id}}" style="display: none;">
                    <button name="" class="btn actionBtn delBtn scale" formaction="/admin/user/delete" type="submit">
                        <i class="bi bi-person-x-fill"></i>
                    </button>
                </form>
                <div class="modal fade" id="modal_{{id}}" tabindex="-1" aria-labelledby="modalLabel_"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header custom-modal-header">
                                <h1 class="modal-title fs-5" style="width:100%; text-align: center;" id="modalLabel_">
                                    Chỉnh sửa người dùng
                                </h1>
                            </div>
                            <form method="post">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="emailInput">Email</label>
                                        <input type="text" value="{{email}}" class="form-control" name="email"
                                            id="emailInput" placeholder="">
                                    </div>
                                    <div class="form-group">
                                        <label for="nameInput">Họ tên</label>
                                        <input type="text" value="{{name}}" class="form-control" name="name"
                                            id="nameInput" placeholder="">
                                    </div>
                                    <div class="form-group">
                                        <label for="dobInput">Ngày sinh</label>
                                        <input value="{{dateOfBirth}}" type="text" class="form-control" name="dob"
                                            id="dobInput" placeholder="">
                                    </div>
                                    <div class="form-group">
                                        <label for="roleSelect_{{id}}" class="form-label"
                                            style="padding-top: 8px; width: 200px;">
                                            Vai Trò
                                        </label>
                                        <select name="role" class="form-select" style="height: 40px;"
                                            id="roleSelect_{{id}}">
                                            <option value="admin" {{#if (eq role 'admin' ) }}selected{{/if}}>
                                                Admin
                                            </option>
                                            <option value="user" {{#if (eq role 'user' ) }}selected{{/if}}>
                                                User
                                            </option>
                                            <option value="writer" {{#if (eq role 'writer' ) }}selected{{/if}}>
                                                Writer
                                            </option>
                                            <option value="editor" {{#if (eq role 'editor' ) }}selected{{/if}}>
                                                Editor
                                            </option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="category_{{id}}" class="form-label"
                                            style="padding-top: 8px; width: 200px;">
                                            Chuyên mục phụ trách
                                        </label>
                                        <input type="text" class="form-control" value="" name="category" readonly
                                            style="display: none;">
                                        </input>
                                        <div class="categoryInputResult">
                                            <div class="categoryInputItem">abc <span class="categoryInputItemRemove"
                                                    onclick="">×</span></div>
                                        </div>
                                        <select class="form-select" style="height: 40px;" id="category_{{id}}">
                                            {{#each ../Categories}}
                                            {{#each SubCategories}}
                                            <option value="{{id}}"> {{name}}</option>
                                            {{/each}}
                                            {{/each}}
                                        </select>
                                        <button type="button" id="addBtn_{{id}}" class="btn actionBtn">Add</button>
                                    </div>
                                </div>
                                <div class="modal-footer custom-modal-footer ">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Đóng</button>
                                    <button type="sumbit" class="btn actionBtn"
                                        formaction="/admin/user/edit/{{id}}">Lưu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>